# Medical Amount Detection API - Environment Configuration

# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Google Gemini API Configuration
GOOGLE_AI_API_KEY=your_google_ai_studio_api_key_here
GOOGLE_AI_MODEL=gemini-pro
AI_MAX_RETRIES=3
AI_TIMEOUT_MS=10000

# OCR Configuration
TESSERACT_PATH=/usr/local/bin/tesseract
OCR_CONFIDENCE_THRESHOLD=0.7
SUPPORTED_LANGUAGES=eng,hin,spa,fra,deu
OCR_TIMEOUT_MS=15000

# Processing Configuration
MAX_FILE_SIZE_MB=50
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,bmp,tiff,webp,pdf
PROCESSING_TIMEOUT_MS=30000
MAX_CONCURRENT_REQUESTS=10

# Security & Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
MAX_TEXT_LENGTH=50000
ENABLE_FILE_VALIDATION=true
ENABLE_SUSPICIOUS_PATTERN_DETECTION=true

# Guardrails Configuration
INPUT_VALIDATION_ENABLED=true
OUTPUT_VALIDATION_ENABLED=true
AI_SAFETY_VALIDATION_ENABLED=true
BUSINESS_LOGIC_VALIDATION_ENABLED=true

# Confidence Thresholds
MIN_OCR_CONFIDENCE=0.5
MIN_NORMALIZATION_CONFIDENCE=0.8
MIN_CLASSIFICATION_CONFIDENCE=0.75
HIGH_RISK_AMOUNT_THRESHOLD=100000

# Error Handling
ENABLE_FALLBACK_CLASSIFICATION=true
ENABLE_PARTIAL_RESULTS=true
AUTO_RETRY_ON_LOW_CONFIDENCE=true
MAX_PROCESSING_RETRIES=2

# Monitoring & Logging
ENABLE_STRUCTURED_LOGGING=true
ENABLE_PERFORMANCE_METRICS=true
LOG_SENSITIVE_DATA=false
AUDIT_LOG_ENABLED=true